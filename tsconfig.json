{
  "compilerOptions": {
    "target": "es5",                               
    "module": "commonjs", 
    "moduleResolution": "node",
    "sourceMap": true,                           
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "./build",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
  }
}
